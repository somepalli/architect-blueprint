# Streamlit Secrets Configuration (Example)
#
# For Streamlit Cloud deployment:
# 1. Go to https://share.streamlit.io/
# 2. Select your app
# 3. Click Settings (⚙️) → Secrets
# 4. Copy the content below and replace with your actual API keys
# 5. Click "Save"
#
# IMPORTANT: This file is just an example. Never commit actual secrets to git!
# The real secrets.toml file is already in .gitignore and won't be committed.

# === LLM Provider API Keys ===
# Add keys ONLY for the providers you want to use

# DeepSeek (Recommended - 97% cheaper than OpenAI)
DEEPSEEK_API_KEY = "sk-your-deepseek-api-key-here"

# OpenAI (Premium quality)
# OPENAI_API_KEY = "sk-your-openai-api-key-here"

# Groq (Fast & Free - has compatibility issues)
# GROQ_API_KEY = "gsk-your-groq-api-key-here"

# Kimi/MoonshotAI (60% cheaper)
# MOONSHOT_API_KEY = "sk-your-kimi-api-key-here"

# === Configuration ===
DEFAULT_PROVIDER = "deepseek"
MAX_TOKENS = "4096"
TEMPERATURE = "0.3"

# === Model Selection (Optional) ===
# Uncomment to override default models
# OPENAI_MODEL = "gpt-4-turbo"
# DEEPSEEK_MODEL = "deepseek-chat"
# GROQ_MODEL = "llama-3.3-70b-versatile"
# KIMI_MODEL = "moonshot-v1-8k"
